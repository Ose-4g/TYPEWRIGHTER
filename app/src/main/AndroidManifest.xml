<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ose4g.typerighter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/type_righter"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/type_righter_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HowToPlayActivity"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7932162834190177~3546879680" />

        <activity android:name=".GlobalLeaderboard.GlobalLeaderboardActivity" />
        <activity android:name=".GoogleSignInActivity" />
        <activity android:name=".GameOverScreenActivity" />
        <activity android:name=".HighScores" />
        <activity android:name=".GameOptionsScreen" />
        <activity
            android:name=".GameSplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>